<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:colorPrimaryDark">@android:color/holo_green_dark</item>
        <!-- для Android 5+ вы можете поменять цвет colorPrimaryDark, чтобы соответствовать цвету windowBackground -->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="ShapeOfButtonTheme">

        <item name="android:background">@drawable/button_login</item>

    </style>
</resources>
