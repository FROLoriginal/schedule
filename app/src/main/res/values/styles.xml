<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:colorPrimaryDark">@color/backgroundColor</item>
    </style>

    <style name="ShapeOfButtonTheme">
        <item name="android:background">@drawable/button_login</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar.Custom">
        <item name="colorPrimaryDark">@color/backgroundColor</item>
    </style>
</resources>
