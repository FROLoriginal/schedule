<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:colorPrimaryDark">@color/backgroundColor</item>
    </style>

    <style name="Theme.MaterialComponents.NoActionBar.Custom">
        <item name="colorPrimaryDark">@color/backgroundColor</item>
    </style>

    <style name="LoginActBtnState">
        <item name="android:backgroundTint">@drawable/login_activity_button_state</item>
    </style>
</resources>
